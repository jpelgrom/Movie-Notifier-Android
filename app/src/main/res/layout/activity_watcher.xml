<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="true"
            android:layout_marginTop="-6dp"/>

        <ScrollView
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true">

                <TextView
                    android:id="@+id/error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="72dp"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight"
                    style="@style/TextError"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    tools:text="@string/error_general_message"
                    tools:visibility="visible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?listPreferredItemHeightSmall"
                    android:text="@string/watcher_basics_title"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:paddingStart="72dp"
                    android:paddingEnd="?listPreferredItemPaddingRight"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="?attr/listPreferredItemPaddingLeft"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <ImageView
                        android:id="@+id/watcherNameIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:padding="8dp"
                        android:contentDescription="@string/watcher_basics_name"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_text_fields"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/watcherNameWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_toEndOf="@+id/watcherNameIcon">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/watcherName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="flagNoExtractUi|actionNext"
                            android:inputType="text|textCapWords"
                            android:maxLines="1"
                            android:lines="1"
                            android:singleLine="true"
                            android:hint="@string/watcher_basics_name"/>

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="?attr/listPreferredItemPaddingLeft"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <ImageView
                        android:id="@+id/watcherMovieIDIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:padding="8dp"
                        android:contentDescription="@string/watcher_basics_movieid"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_confirmation_number"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/watcherMovieIDWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_toEndOf="@id/watcherMovieIDIcon">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/watcherMovieID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="flagNoExtractUi|actionNext"
                            android:inputType="number"
                            android:maxLines="1"
                            android:lines="1"
                            android:singleLine="true"
                            android:hint="@string/watcher_basics_movieid"/>

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="?attr/listPreferredItemPaddingLeft"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <ImageView
                        android:id="@+id/watcherCinemaIDIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:padding="8dp"
                        android:contentDescription="@string/watcher_basics_cinemaid"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_location"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/watcherCinemaIDWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_toEndOf="@+id/watcherCinemaIDIcon">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/watcherCinemaID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="flagNoExtractUi|actionDone"
                            android:inputType="text|textNoSuggestions"
                            android:maxLines="1"
                            android:lines="1"
                            android:singleLine="true"
                            android:hint="@string/watcher_basics_cinemaid"/>

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?listPreferredItemHeightSmall"
                    android:text="@string/watcher_date_title"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:paddingStart="72dp"
                    android:paddingEnd="?listPreferredItemPaddingRight"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"/>

                <RelativeLayout
                    android:id="@+id/startAfter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="?attr/listPreferredItemPaddingLeft"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <ImageView
                        android:id="@+id/startAfterIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:padding="8dp"
                        android:contentDescription="@string/watcher_date_after"
                        app:srcCompat="@drawable/ic_date_range"/>

                    <TextView
                        android:id="@+id/startAfterTitle"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/watcher_date_after"
                        android:layout_toEndOf="@+id/startAfterIcon"/>

                    <TextView
                        android:id="@+id/startAfterValue"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="Aug 24, 2017 19:16"
                        tools:ignore="hardcodedText"
                        android:layout_below="@+id/startAfterTitle"
                        android:layout_toEndOf="@+id/startAfterIcon"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/startBefore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="72dp"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <TextView
                        android:id="@+id/startBeforeTitle"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/watcher_date_before"/>

                    <TextView
                        android:id="@+id/startBeforeValue"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="Aug 31, 2017 19:16"
                        tools:ignore="hardcodedText"
                        android:layout_below="@+id/startBeforeTitle"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?listPreferredItemHeightSmall"
                    android:text="@string/watcher_prop_heading_experience"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:paddingStart="72dp"
                    android:paddingEnd="?listPreferredItemPaddingRight"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"/>

                <RelativeLayout
                    android:id="@+id/propIMAX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="?attr/listPreferredItemPaddingLeft"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <ImageView
                        android:id="@+id/propIMAXLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:padding="8dp"
                        android:contentDescription="@string/watcher_prop_title_imax"
                        app:srcCompat="@drawable/logo_imax"/>

                    <TextView
                        android:id="@+id/propIMAXTitle"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/watcher_prop_title_imax"
                        android:layout_toEndOf="@+id/propIMAXLogo"/>

                    <TextView
                        android:id="@+id/propIMAXValue"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="@string/watcher_prop_value_null"
                        android:layout_below="@+id/propIMAXTitle"
                        android:layout_toEndOf="@+id/propIMAXLogo"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/propDolbyCinema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="?attr/listPreferredItemPaddingLeft"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <ImageView
                        android:id="@+id/propDolbyCinemaLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:padding="8dp"
                        android:contentDescription="@string/watcher_prop_title_dolbycinema"
                        app:srcCompat="@drawable/logo_dolby"/>

                    <TextView
                        android:id="@+id/propDolbyCinemaTitle"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/watcher_prop_title_dolbycinema"
                        android:layout_toEndOf="@+id/propDolbyCinemaLogo"/>

                    <TextView
                        android:id="@+id/propDolbyCinemaValue"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="@string/watcher_prop_value_null"
                        android:layout_below="@+id/propDolbyCinemaTitle"
                        android:layout_toEndOf="@+id/propDolbyCinemaLogo"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?listPreferredItemHeightSmall"
                    android:text="@string/watcher_prop_heading_projection"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:paddingStart="72dp"
                    android:paddingEnd="?listPreferredItemPaddingRight"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"/>

                <RelativeLayout
                    android:id="@+id/prop3D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="72dp"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <TextView
                        android:id="@+id/prop3DTitle"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/watcher_prop_title_3d"/>

                    <TextView
                        android:id="@+id/prop3DValue"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="@string/watcher_prop_value_null"
                        android:layout_below="@+id/prop3DTitle"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/prop4K"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="72dp"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <TextView
                        android:id="@+id/prop4KTitle"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/watcher_prop_title_4k"/>

                    <TextView
                        android:id="@+id/prop4KValue"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="@string/watcher_prop_value_null"
                        android:layout_below="@+id/prop4KTitle"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/propLaser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="72dp"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <TextView
                        android:id="@+id/propLaserTitle"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/watcher_prop_title_laser"/>

                    <TextView
                        android:id="@+id/propLaserValue"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="@string/watcher_prop_value_null"
                        android:layout_below="@+id/propLaserTitle"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/propHFR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="72dp"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <TextView
                        android:id="@+id/propHFRTitle"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/watcher_prop_title_hfr"/>

                    <TextView
                        android:id="@+id/propHFRValue"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="@string/watcher_prop_value_null"
                        android:layout_below="@+id/propHFRTitle"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?listPreferredItemHeightSmall"
                    android:text="@string/watcher_prop_heading_audio"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:paddingStart="72dp"
                    android:paddingEnd="?listPreferredItemPaddingRight"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"/>

                <RelativeLayout
                    android:id="@+id/propDolbyAtmos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="?attr/listPreferredItemPaddingLeft"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <ImageView
                        android:id="@+id/propDolbyAtmosLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:padding="8dp"
                        android:contentDescription="@string/watcher_prop_title_dolbyatmos"
                        app:srcCompat="@drawable/logo_dolby"/>

                    <TextView
                        android:id="@+id/propDolbyAtmosTitle"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/watcher_prop_title_dolbyatmos"
                        android:layout_toEndOf="@+id/propDolbyAtmosLogo"/>

                    <TextView
                        android:id="@+id/propDolbyAtmosValue"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="@string/watcher_prop_value_null"
                        android:layout_below="@+id/propDolbyAtmosTitle"
                        android:layout_toEndOf="@+id/propDolbyAtmosLogo"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/propOV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="72dp"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <TextView
                        android:id="@+id/propOVTitle"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/watcher_prop_title_ov"/>

                    <TextView
                        android:id="@+id/propOVValue"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="@string/watcher_prop_value_null"
                        android:layout_below="@+id/propOVTitle"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/propNL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="72dp"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <TextView
                        android:id="@+id/propNLTitle"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/watcher_prop_title_nl"/>

                    <TextView
                        android:id="@+id/propNLValue"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="@string/watcher_prop_value_null"
                        android:layout_below="@+id/propNLTitle"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?listPreferredItemHeightSmall"
                    android:text="@string/watcher_prop_heading_additionalexperiences"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:paddingStart="72dp"
                    android:paddingEnd="?listPreferredItemPaddingRight"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"/>

                <RelativeLayout
                    android:id="@+id/propDBOX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="?attr/listPreferredItemHeight"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="?attr/listPreferredItemPaddingLeft"
                    android:paddingEnd="?attr/listPreferredItemPaddingRight">

                    <ImageView
                        android:id="@+id/propDBOXLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:padding="8dp"
                        android:contentDescription="@string/watcher_prop_title_dbox"
                        app:srcCompat="@drawable/logo_dbox"/>

                    <TextView
                        android:id="@+id/propDBOXTitle"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/watcher_prop_title_dbox"
                        android:layout_toEndOf="@+id/propDBOXLogo"/>

                    <TextView
                        android:id="@+id/propDBOXValue"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:text="@string/watcher_prop_value_null"
                        android:layout_below="@+id/propDBOXTitle"
                        android:layout_toEndOf="@+id/propDBOXLogo"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/loaderError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:visibility="gone">

            <TextView
                android:id="@+id/loaderErrorText"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/error_watcher_400"/>

            <Button
                android:id="@+id/loaderErrorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/retry"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

        </LinearLayout>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:visibility="gone"
        tools:visibility="visible"
        app:srcCompat="@drawable/ic_edit"/>

